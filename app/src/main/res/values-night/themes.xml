<resources>
    <!-- Base application theme. -->
    <style name="Theme.TMDB" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTitle" parent="Theme.TMDB">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MovieTitle" parent="Theme.TMDB">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_42sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ChipMovieDetail" parent="Theme.TMDB">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/rounded_chip_movie_detail_bg</item>
        <item name="android:paddingTop">@dimen/padding_3dp</item>
        <item name="android:paddingBottom">@dimen/padding_3dp</item>
        <item name="android:paddingLeft">@dimen/padding_4dp</item>
        <item name="android:paddingRight">@dimen/padding_4dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_8dp</item>
        <item name="android:layout_marginRight">@dimen/margin_8dp</item>
    </style>

    <style name="ChipMovieDetail.Gold">
        <item name="android:background">@drawable/rounded_chip_movie_detail_gold_bg</item>
    </style>

    <style name="MovieGenere" parent="Theme.TMDB">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/margin_8dp</item>
    </style>

    <style name="SeeTrailer" parent="Theme.TMDB">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/margin_16dp</item>
        <item name="android:background">@drawable/rounded_button_bg</item>
        <item name="android:paddingLeft">@dimen/padding_button_l_r</item>
        <item name="android:paddingRight">@dimen/padding_button_l_r</item>
        <item name="android:paddingTop">@dimen/padding_button_t_b</item>
        <item name="android:paddingBottom">@dimen/padding_button_t_b</item>
    </style>

    <style name="MovieDescription" parent="Theme.TMDB">
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_marginLeft">@dimen/margin_16dp</item>
        <item name="android:layout_marginRight">@dimen/margin_16dp</item>
        <item name="android:layout_marginTop">@dimen/margin_16dp</item>
        <item name="android:textSize">@dimen/font_18sp</item>
    </style>

    <style name="ChipStyleUnselected" parent="Theme.TMDB">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_16sp</item>
    </style>

    <style name="ChipStyleSelected" parent="Theme.TMDB">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_16sp</item>
    </style>

    <style name="YoutubeTitle" parent="Theme.TMDB">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.TMDB">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>